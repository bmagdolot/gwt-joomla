    <files>
    <filename>index.php</filename>
    <filename>favico.ico</filename>
    <filename>framework.php</filename>
    <folder>css</folder>
    <folder>js</folder>
    <folder>images</folder>
    <folder>html</folder>
    <folder>layouts</folder>
  </files>

  <positions>
        <position>home</position>
        <position>topbar-left-1</position>
        <position>topbar-left-2</position>
        <position>topbar-left-3</position>
        <position>topbar-left-4</position>
        <position>topbar-right-1</position>
        <position>topbar-right-2</position>
        <position>search</position>
		<position>auxiliary-menu</position>
		<position>breadcrumb</position>
        <position>main-content</position>
	  	<position>main-content-2</position>
        <position>slider</position>
        <position>left-sidebar-panel1</position>
        <position>left-sidebar-panel2</position>
        <position>left-sidebar-panel3</position>
        <position>right-sidebar-panel1</position>
        <position>right-sidebar-panel2</position>
        <position>right-sidebar-panel3</position>
        <position>agencyfooter-1</position>
        <position>agencyfooter-2</position>
        <position>agencyfooter-3</position>
  </positions>

  <config>
    <fields name="params">  
          
      <fieldset name="themeOptions" label="Theme Options">

        <field name="logoFile" class="" type="media" default=""
          label="Header Logo Upload"
          description="Upload the image of your logo and agency name here" />
          
        <field name="logoPosition"
          type="radio"
          class="btn-group"
          default="0"
          label="Header Logo Position"
          description="Select Logo Position."
        >
          <option value="0">LEFT</option>
          <option value="1">CENTER</option>
        </field>
          
        <field name="headerBackgroundColor" class="" type="color" default="#142745"
          label="Header Background Color"
          description="Enter the hex code for your header background color." />

        <field name="headerBackgroundImage" class="" type="media" default=""
          label="Header Background Image"
          description="Enter your background image here." />

        <!--field name="bannerFullwidth"
          type="radio"
          class="btn-group"
          default="0"
          label="Fullwidth Liquid Banner"
          description="Select Yes to enable Full Width liquid banner."
        >
          <option value="0">NO</option>
          <option value="1">YES</option>
        </field-->
          
        <field name="bannerBackgroundColor" class="" type="color" default="#1f3a70"
          label="Banner Background Color"
          description="Enter the hex code for your banner background color." />

        <field name="sidebarPosition"
          type="radio"
          class="btn-group"
          default="0"
          label="Sidebar Position"
          description="Select Sidebar Position."
        >
          <option value="0">LEFT</option>
          <option value="1">RIGHT</option>
          <option value="2">DISABLE</option>
          <option value="3">BOTH</option>
        </field>
    </fieldset>  
        
    <fieldset name="sliderOptions" label="Image Slider">
            
        <field name="imgUrl1" label="Image 1" description="Image 1" type="media" />
        <field name="imgExcerpt1" label="Caption 1" description="Caption 1" type="text" />
        <field name="imgLink1" label="Link 1" description="Link 1" type="text" />
				
        <field name="imgUrl2" label="Image 2" description="Image 1" type="media" />
        <field name="imgExcerpt2" label="Caption 2" description="Caption 2" type="text" />
        <field name="imgLink2" label="Link 2" description="Link 2" type="text" />
            
        <field name="imgUrl3" label="Image 3" description="Image 3" type="media" />
        <field name="imgExcerpt3" label="Caption 3" description="Caption 3" type="text" />
        <field name="imgLink3" label="Link 3" description="Link 3" type="text" />
            
        <field name="imgUrl4" label="Image 4" description="Image 4" type="media" />
        <field name="imgExcerpt4" label="Caption 4" description="Caption 4" type="text" />
        <field name="imgLink4" label="Link 4" description="Link 4" type="text" />
        
        <field name="imgUrl5" label="Image 5" description="Image 5" type="media" />
        <field name="imgExcerpt5" label="Caption 5" description="Caption 5" type="text" />
        <field name="imgLink5" label="Link 5" description="Link 5" type="text" />
            
        <field name="imgUrl6" label="Image 6" description="Image 6" type="media" />
        <field name="imgExcerpt6" label="Caption 6" description="Caption 6" type="text" />
        <field name="imgLink6" label="Link 6" description="Link 6" type="text" />
    	
    	<field name="imgUrl7" label="Image 7" description="Image 7" type="media" />
        <field name="imgExcerpt7" label="Caption 7" description="Caption 7" type="text" />
        <field name="imgLink7" label="Link 7" description="Link 7" type="text" />
        
        <field name="imgUrl8" label="Image 8" description="Image 8" type="media" />
        <field name="imgExcerpt8" label="Caption 8" description="Caption 8" type="text" />
        <field name="imgLink8" label="Link 8" description="Link 8" type="text" />
        
        <field name="imgUrl9" label="Image 9" description="Image 9" type="media" />
        <field name="imgExcerpt9" label="Caption 9" description="Caption 9" type="text" />
        <field name="imgLink9" label="Link 9" description="Link 9" type="text" />
                  
    </fieldset>    
          
    <fieldset name="accessibility" label="Accessibility">
		<field name="accessAccessibility" class="" type="text" default=""
          label="Accessibility Access Key Site (Alt+0): Accessibility Statement"
          description="Enter link for accessibility accesskey (0)" />

		<field name="accessHome" class="" type="text" default="home"
          label="Accessibility Access Key Site (Alt+1): Home"
          description="Enter link for home accesskey (1)" />

		<field name="accessContent" class="" type="text" default="#maincontents"
          label="Accessibility Access Key Site (Alt+R): Main Content"
          description="Enter link for main content accesskey (R)" />

		<field name="accessFAQ" class="" type="text" default=""
          label="Accessibility Access Key Site (Alt+5): FAQ"
          description="Enter link for FAQ accesskey (5)" />

		<field name="accessContact" class="" type="text" default=""
          label="Accessibility Access Key Site (Alt+C): Contact"
          description="Enter link for search accesskey (C)" />
		  
		<field name="accessFeedback" class="" type="text" default=""
          label="Accessibility Access Key Site (Alt+K): Feedback"
          description="Enter link for search accesskey (K)" />

		<field name="accessSiteMap" class="" type="text" default="#agencyfooter"
          label="Accessibility Access Key Site (Alt+M): Site Map"
          description="Enter link for search accesskey (M)" />

		<field name="accessSearch" class="" type="text" default=""
          label="Accessibility Access Key Site (Alt+S): Search"
          description="Enter link for search accesskey (S)" />
      </fieldset>
    </fields>
  </config>
</extension>